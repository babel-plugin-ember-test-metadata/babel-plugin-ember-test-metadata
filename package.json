{
  "name": "ember-babel-add-test-metadata",
  "version": "0.0.0",
  "description": "adds test metadata",
  "license": "MIT",
  "repository": "https://github.com/glnster/ember-babel-add-test-metadata",
  "author": {
    "name": "Glenn Cueto",
    "email": "gcueto@linkedin.com",
    "url": ""
  },
  "engines": {
    "node": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "remove-lockfiles && lint-staged"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files --ignore **/*.test.js",
    "postbuild": "rimraf dist/**/*.test.js",
    "test:watch": "jest --watch",
    "test": "xo && jest --coverage"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-tester": "^10.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "remove-lockfiles": "^2.0.4",
    "rimraf": "^2.6.2",
    "xo": "^0.23.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "space": true
  },
  "keywords": []
}
