{
  "name": "babel-plugin-ember-test-metadata",
  "version": "0.0.0",
  "description": "adds test metadata",
  "keywords": [],
  "repository": "https://github.com/babel-plugin-ember-test-metadata/babel-plugin-ember-test-metadata",
  "license": "MIT",
  "author": {
    "name": "Glenn Cueto",
    "email": "gcueto@linkedin.com"
  },
  "main": "src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --copy-files --ignore **/*.test.js",
    "lint": "xo",
    "postbuild": "rimraf dist/**/*.test.js",
    "test:watch": "jest --watch",
    "test:xo": "xo && jest --coverage",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/src/*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "space": true
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-tester": "^10.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "remove-lockfiles": "^2.0.4",
    "rimraf": "^2.6.2",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "12.22.1",
    "yarn": "1.22.10"
  }
}
